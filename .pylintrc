[MASTER]
ignore-patterns=
ignore=packages/valory/protocols/abci

[MESSAGES CONTROL]
# disable=C0103,C0201,C0301,C0302,W0105,W0707,W1202,W1203,R0801

# See here for more options: https://www.codeac.io/documentation/pylint-configuration.html
W0707: raise-missing-from
W1202: logging-format-interpolation
W1203: logging-fstring-interpolation

C0103: invalid-name
C0201: consider-iterating-dictionary
C0301: http://pylint-messages.wikidot.com/messages:c0301 > Line too long
C0302: http://pylint-messages.wikidot.com/messages:c0302 > Too many lines in module
W0105: pointless-string-statement
R0801: similar lines

[IMPORTS]
ignored-modules=

[DESIGN]
# min-public-methods=1
# max-public-methods=36
# max-returns=10
# max-bool-expr=7
# max-args=27
# max-locals=31
# max-statements=80
# max-parents=11
# max-branches=24
# max-attributes=38

[REFACTORING]
# max-nested-blocks=6

[SPELLING]
# uncomment to enable
# spelling-dict=en_US

# List of comma separated words that should not be checked.
spelling-ignore-words=nocover,pragma,params,noqa,kwargs,str,async,json,boolean,config,pytest,args,url,tx,jsonschema,traceback,api,nosec